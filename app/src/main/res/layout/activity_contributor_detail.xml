<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/contributors_detail_padding"
    tools:context=".ContributorDetailActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/contributor_detail_icon"
        android:layout_width="@dimen/contributors_detail_icon_width_height"
        android:layout_height="@dimen/contributors_detail_icon_width_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/no_image" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/contributor_detail_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="ianhanniballake"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contributor_detail_icon" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/contributor_detail_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="517315"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contributor_detail_login" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/contributor_detail_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Sunnyvale, CA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contributor_detail_id" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/contributor_detail_company"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contributor_detail_location" />

</androidx.constraintlayout.widget.ConstraintLayout>